<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="template" method="upgrade" client="site">
	<name>JA Mason Child</name>
	<version>2.2.0</version>
	<creationDate>Nov 17th, 2025</creationDate>
	<author>JoomlArt.com</author>
	<authorEmail>webmaster@joomlart.com</authorEmail>
	<authorUrl>http://www.t3-framework.org</authorUrl>
	<copyright>Copyright (C), J.O.O.M Solutions Co., Ltd. All Rights Reserved.</copyright>
	<license>license GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description>Child template for JA Mason</description>
	<t3>
		<base>base-bs3</base>
	</t3>
	<files>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>thememagic.xml</filename>
		<filename>templateInfo.php</filename>
		<filename>templateHook.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>acm</folder>
		<folder>etc</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>less</folder>
		<folder>language</folder>
		<folder>tpls</folder>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_ja_mason.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_ja_mason.sys.ini</language>
	</languages>

	<positions>
		<position>languageswitcherload</position>
		<position>bottom-vertical</position>
		<position>footer</position>
		<position>head-search</position>
		<position>masthead</position>
		<position>off-canvas</position>
		<position>section-bottom</position>
		<position>section-top</position>
		<position>sidebar-1</position>
		<position>sidebar-2</position>
		<position>slideshow</position>
		<position>debug</position>
	</positions>

</extension>
