<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
        name="Map"
        label="COM_ZHGOOGLEMAP_CONFIG_MAP_LABEL"
        description="COM_ZHGOOGLEMAP_CONFIG_MAP_DESC"
