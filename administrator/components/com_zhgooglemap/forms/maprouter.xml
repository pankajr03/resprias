<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="routemain">
        <field
            name="id"
            type="hidden"
        />
        <field
            name="title"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TITLE_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TITLE_DESC"
            size="60"
            class="inputbox span10"
            required="true"
            default=""
        />
        <field
            name="description"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_DESCRIPTION_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_DESCRIPTION_DESC"
            size="100"
            class="inputbox span10"
            required="false"
            default=""
        />
           <field
            name="route_data"
            type="list"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTEDATA_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTEDATA_DESC"
            size="1"
            required="true"
            default="0"
            class="lst-dropdown-sinlge"
        >
            <option value="0">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTEDATA_ADDRESS</option>
            <option value="1">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTEDATA_COORDINATES</option>
        </field>
        <field
            name="route"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTE_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTE_DESC"
            size="100"
            class="inputbox span10"
            required="false"
            default=""
        />
        <field
            name="routebymarker"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTEMARKER_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTEMARKER_DESC"
            size="100"
            class="inputbox span10"
            required="false"
            default=""
        />
        <field
            name="csv_file"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTECSVFILE_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTECSVFILE_DESC"
            size="40"
            class="inputbox span5"
            required="false"
            default="" 
        />     
        <field
            name="csv_sep"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTECSVSEP_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_ROUTECSVSEP_DESC"
            size="20"
            class="inputbox"
            required="false"
            default=""
        />   
        <field
            name="mapid"
            type="mapmap"
            class="lst-dropdown-sinlge span5"
            default=""
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_MAPID_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_MAPID_DESC"
            required="true"
            addfieldprefix="ZhukDL\Component\ZhGoogleMap\Administrator\Field"
        >
            <option value="">COM_ZHGOOGLEMAP_MAPROUTER_FILTER_MAP</option>
        </field>
        
    </fieldset>

    <fieldset name="details">
        <field
            name="published"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_PUBLISHED_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_PUBLISHED_DESC"
            size="30"
            required="true"
            default="1"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="travelmode"
            type="list"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TRAVELMODE_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TRAVELMODE_DESC"
            size="1"
            required="true"
            default="1"
            class="lst-dropdown-sinlge"
        >
            <option value="1">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TRAVELMODE_DRIVING</option>
            <option value="2">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TRAVELMODE_WALKING</option>
            <option value="3">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TRAVELMODE_BICYCLING</option>
            <option value="4">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_TRAVELMODE_TRANSIT</option>
        </field>
        <field
            name="unitsystem"
            type="list"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_UNITSYSTEM_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_UNITSYSTEM_DESC"
            size="1"
            required="true"
            default="1"
            class="lst-dropdown-sinlge"
        >
            <option value="1">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_UNITSYSTEM_METRIC</option>
            <option value="2">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_UNITSYSTEM_IMPERIAL</option>
        </field>
    
        <field
            name="providealt"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_PROVIDEALT_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_PROVIDEALT_DESC"
            size="30"
            required="true"
            default="0"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="avoidhighways"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_AVOIDHIGHWAYS_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_AVOIDHIGHWAYS_DESC"
            size="30"
            required="true"
            default="0"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="avoidtolls"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_AVOIDTOLLS_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_AVOIDTOLLS_DESC"
            size="30"
            required="true"
            default="0"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="optimizewaypoints"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_OPTIMIZEWP_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_OPTIMIZEWP_DESC"
            size="30"
            required="true"
            default="0"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="showtype"
            type="list"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWTYPE_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWTYPE_DESC"
            size="1"
            required="true"
            default="0"
            class="lst-dropdown-sinlge"
        >
            <option value="0">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWTYPE_ZOOM</option>
            <option value="1">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWTYPE_UNCHANGE</option>
        </field>
        <field
            name="draggable"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_DRAGGABLE_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_DRAGGABLE_DESC"
            size="1"
            required="true"
            default="0"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="weight"
            type="list"
            label="COM_ZHGOOGLEMAP_MAPPATH_DETAIL_WEIGHT_LABEL"
            description="COM_ZHGOOGLEMAP_MAPPATH_DETAIL_WEIGHT_DESC"
            size="1"
            required="true"
            default="5"
            class="lst-dropdown-sinlge"
        >
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
        </field>
        <field
            name="color"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPPATH_DETAIL_COLOR_LABEL"
            description="COM_ZHGOOGLEMAP_MAPPATH_DETAIL_COLOR_DESC"
            size="30"
            class="inputbox"
            required="true"
            default="#4FA4FF"
        />
        <field
            name="opacity"
            type="text"
            label="COM_ZHGOOGLEMAP_MAPPATH_DETAIL_OPACITY_LABEL"
            description="COM_ZHGOOGLEMAP_MAPPATH_DETAIL_OPACITY_DESC"
            size="30"
            class="inputbox"
            required="true"
            default="0.7"
        />
        
        <field
            name="showpanel"
            type="list"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWPANEL_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWPANEL_DESC"
            size="1"
            required="true"
            default="0"
            class="lst-dropdown-sinlge"
        >
            <option value="0">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWPANEL_NONE</option>
            <option value="1">COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWPANEL_BOTTOM</option>
        </field>
        <field
            name="showpaneltotal"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWPANELTOTAL_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWPANELTOTAL_DESC"
            size="1"
            required="true"
            default="1"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="showdescription"
            type="list"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWDESCRIPTION_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOWDESCRIPTION_DESC"
            size="1"
            required="true"
            default="0"
            class="lst-dropdown-sinlge"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="suppressmarkers"
            type="radio"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SUPPRESSMARKERS_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SUPPRESSMARKERS_DESC"
            size="1"
            required="true"
            default="0"
            class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="catid"
            type="category"
            extension="com_zhgooglemap"
            class="inputbox span5"
            default=""
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_CATEGORY_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_CATEGORY_DESC"
            required="false"
        >
            <option value="0">JOPTION_SELECT_CATEGORY</option>
        </field>
        <field
            name="descriptionhtml"
            type="editor"
            label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_DESCRIPTIONHTML_LABEL"
            description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_DESCRIPTIONHTML_DESC"
            rows="10"
            size="100"
            class="inputbox"
            required="false"
            default=""
            filter="raw"
        />          
    </fieldset>

            
    <fields name="params">
        <fieldset
            name="params"
            label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
        >
            <field
                name="show_category"
                type="list"
                label="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOW_CATEGORY_LABEL"
                description="COM_ZHGOOGLEMAP_MAPROUTER_DETAIL_SHOW_CATEGORY_DESC"
                default=""
                class="lst-dropdown-sinlge"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>
    </fields>

</form>
